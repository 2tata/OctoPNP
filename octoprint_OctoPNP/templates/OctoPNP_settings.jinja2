            </div>
        </div>
        <div class="controls form-inline">
            <label>{{ _('Z') }}</label>
            <div class="input-append">
                <input type="number" step="0.01" class="input-mini text-right" data-bind="value: settings.plugins.OctoPNP.tray.z">
                <span class="add-on">mm</span>
            </div>
        </div>
    </div>


    <div class="control-group">
        <label class="control-label">{{ _('Tray dimensions') }}</label>
