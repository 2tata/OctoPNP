<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Tray position') }}</label>
        <div class="controls form-inline">
            <label>{{ _('X') }}</label>
            <div class="input-append">
                <input type="number" step="0.01" class="input-mini text-right" data-bind="value: settings.plugins.OctoPNP.tray.x">
                <span class="add-on">mm</span>
            </div>
        </div>
        <div class="controls form-inline">
            <label>{{ _('Y') }}</label>
            <div class="input-append">
                <input type="number" step="0.01" class="input-mini text-right" data-bind="value: settings.plugins.OctoPNP.tray.y">
