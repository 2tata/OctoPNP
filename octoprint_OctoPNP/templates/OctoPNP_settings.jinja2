<form class="form-horizontal">
    <div class="accordion" id="accordion">
        <!-- Tray settings -->
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#tray-settings"><h4>{{ _('Tray') }}</h4></a>
            </div>
            <div id="tray-settings" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="row-fluid">
                        <div class="span4"><h4>{{ _('Tray position') }}</h4></div>
                    </div>
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label" for="tray.position.x">X</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input id="tray.position.x" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.x">
                                    <span class="add-on">mm</span>
                                </div>
                            </div>
                            <label class="control-label" for="tray.position.y">Y</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input id="tray.position.y" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.y">
                                    <span class="add-on">mm</span>
                                </div>
                            </div>
                            <label class="control-label" for="tray.position.z">Z</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input id="tray.position.z" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.z">
                                    <span class="add-on">mm</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span4"><h4>{{ _('Tray dimension') }}</h4></div>
                    </div>
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label" for="tray.rows">Rows</label>
                            <div class="controls">
                                <input id="tray.rows" type="number" step="1" class="input-mini text-right" data-bind="value: tray.rows">
                            </div>
                            <label class="control-label" for="tray.columns">Columns</label>
                            <div class="controls">
                                <input id="tray.columns" type="number" step="1" class="input-mini text-right" data-bind="value: tray.columns">
                            </div>
                            <label class="control-label" for="tray.boxsize">Box size</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input id="tray.boxsize" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.boxsize">
                                    <span class="add-on">mm</span>
                                </div>
                            </div>
                            <label class="control-label" for="tray.rimsize">Rim size</label>
                            <div class="controls">
                                 <div class="input-append">
                                    <input id="tray.rimsize" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.rimsize">
                                    <span class="add-on">mm</span>
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Camera settings -->
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#camera-settings"><h4>{{ _('Camera') }}</h4></a>
            </div>
            <div id="camera-settings" class="accordion-body collapse">
                <div class="accordion-inner">
                    <div class="row-fluid">
                        <div class="span3"><h4>{{ _('Name') }}</h4></div>
                        <div class="span8">
                            <h4>{{ _('Position') }}</h4>
                            <div class="row-fluid">
                                <div class="span4">{{ _('X') }}</div>
                                <div class="span4">{{ _('Y') }}</div>
                                <div class="span4">{{ _('Focus Distance') }}</div>
                            </div>
                        </div>
                    </div>
                    <div data-bind="foreach: camera">
                        <div class="row-fluid">
                            <div class="span3"><a href="#" id="peter" data-type="text" data-pk="1" data-placeholder="Required" data-title="Enter the identifier of the camera" class="editable editable-click editable-empty" data-bind="text: name"></a></div>
                            <div class="span8">
                                <div class="row-fluid">
                                    <div class="span4">
                                        <div class="input-append">
                                            <input type="number" step="0.01" class="input-mini text-right" data-bind="value: x">
                                            <span class="add-on">mm</span>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="input-append">
                                            <input type="number" step="0.01" class="input-mini text-right" data-bind="value: y">
                                            <span class="add-on">mm</span>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="input-append">
                                            <input type="number" step="0.01" class="input-mini text-right" data-bind="value: z">
                                            <span class="add-on">mm</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="span1">
                                <a title="Remove Camera" class="btn btn-danger" data-bind="click: $parent.removeCamera"><i class="icon-trash"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="offset11">
                            <a title="Add Camera" class="btn btn-primary" data-bind="click: addCamera"><i class="icon-plus"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Nozzle settings -->
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#nozzle-settings"><h4>{{ _('Vacuum Nozzle') }}</h4></a>
            </div>
            <div id="nozzle-settings" class="accordion-body collapse">
                <div class="accordion-inner">
                    <div class="row-fluid">
                        <div class="span4"><h4>{{ _('Nozzle Offset') }}</h4></div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="nozzle.x">{{ _('X') }}</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="nozzle.x" type="number" step="0.01" class="input-mini text-right" data-bind="value: nozzle.x">
                                <span class="add-on">mm</span>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="nozzle.y">{{ _('Y') }}</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="nozzle.y" type="number" step="0.01" class="input-mini text-right" data-bind="value: nozzle.y">
                                <span class="add-on">mm</span>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="nozzle.exnr">{{ _('Extruder Number') }}</label>
                        <div class="controls">
                            <input id="nozzle.exnr" type="number" step="1" class="input-mini text-right" data-bind="value: nozzle.exnr">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>