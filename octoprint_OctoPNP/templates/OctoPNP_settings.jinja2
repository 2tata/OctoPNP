        </div>
        <div class="controls form-inline">
            <label class="control-label">{{ _('Columns') }}</label>
            <div class="input-append">
                <input type="number" step="1.0" class="input-mini text-right" data-bind="value: settings.plugins.OctoPNP.tray.columns">
