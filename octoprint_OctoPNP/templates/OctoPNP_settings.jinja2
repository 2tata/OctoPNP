<form class="form-horizontal">
    <div class="accordion" id="accordion">
        <!-- Tray settings -->
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#tray-settings"><h4>{{ _('Tray') }}</h4></a>
            </div>
            <div id="tray-settings" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="row-fluid">
                        <div class="span4"><h4>{{ _('Tray position') }}</h4></div>
                    </div>
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label" for="tray.position.x">X</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input id="tray.position.x" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.x">
                                    <span class="add-on">mm</span>
                                </div>
                            </div>
                            <label class="control-label" for="tray.position.y">Y</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input id="tray.position.y" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.y">
                                    <span class="add-on">mm</span>
                                </div>
                            </div>
                            <label class="control-label" for="tray.position.z">Z</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input id="tray.position.z" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.z">
                                    <span class="add-on">mm</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span4"><h4>{{ _('Tray dimension') }}</h4></div>
                    </div>
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label" for="tray.rows">Rows</label>
                            <div class="controls">
                                <input id="tray.rows" type="number" step="1" class="input-mini text-right" data-bind="value: tray.rows">
                            </div>
                            <label class="control-label" for="tray.columns">Columns</label>
                            <div class="controls">
                                <input id="tray.columns" type="number" step="1" class="input-mini text-right" data-bind="value: tray.columns">
                            </div>
                            <label class="control-label" for="tray.boxsize">Box size</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input id="tray.boxsize" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.boxsize">
                                    <span class="add-on">mm</span>
                                </div>
                            </div>
                            <label class="control-label" for="tray.rimsize">Rim size</label>
                            <div class="controls">
                                 <div class="input-append">
                                    <input id="tray.rimsize" type="number" step="0.01" class="input-mini text-right" data-bind="value: tray.rimsize">
                                    <span class="add-on">mm</span>
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Camera settings -->
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#camera-settings"><h4>{{ _('Cameras') }}</h4></a>
            </div>
            <div id="camera-settings" class="accordion-body collapse">
                <div class="accordion-inner">
                    <div class="row-fluid">
                        <div class="span1">{{ _('Name') }}</div>
                        <div class="span3">{{ _('X') }}</div>
                        <div class="span3">{{ _('Y') }}</div>
                        <div class="span3">{{ _('Focus Distance') }}</div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                <div class="span1"><strong>Head</strong></div>
                                <div class="span3">
                                    <div class="input-append">
                                        <input type="number" step="0.01" class="input-mini text-right" data-bind="value: camera.head.x">
                                        <span class="add-on">mm</span>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="input-append">
                                        <input type="number" step="0.01" class="input-mini text-right" data-bind="value: camera.head.y">
                                        <span class="add-on">mm</span>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="input-append">
                                        <input type="number" step="0.01" class="input-mini text-right" data-bind="value: camera.head.z">
                                        <span class="add-on">mm</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                <div class="span1"></div>
                                <div class="span3">Image Path:</div>
                                <div class="span8">
                                    <div class="input-append">
                                        <input type="text" class="input-xlarge" data-bind="value: camera.head.path">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        <div class="row-fluid">
                        <div class="span12"></div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                <div class="span1"><strong>Bed</strong></div>
                                <div class="span3">
                                    <div class="input-append">
                                        <input type="number" step="0.01" class="input-mini text-right" data-bind="value: camera.bed.x">
                                        <span class="add-on">mm</span>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="input-append">
                                        <input type="number" step="0.01" class="input-mini text-right" data-bind="value: camera.bed.y">
                                        <span class="add-on">mm</span>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="input-append">
                                        <input type="number" step="0.01" class="input-mini text-right" data-bind="value: camera.bed.z">
                                        <span class="add-on">mm</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                <div class="span1"></div>
                                <div class="span3">Image Path:</div>
                                <div class="span8">
                                    <div class="input-append">
                                        <input type="text" class="input-xlarge" data-bind="value: camera.bed.path">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Nozzle settings -->
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#nozzle-settings"><h4>{{ _('Vacuum Nozzle') }}</h4></a>
            </div>
            <div id="nozzle-settings" class="accordion-body collapse">
                <div class="accordion-inner">
                    <div class="row-fluid">
                        <div class="span4"><h4>{{ _('Nozzle Offset') }}</h4></div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="vacnozzle.x">{{ _('X') }}</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="vacnozzle.x" type="number" step="0.01" class="input-mini text-right" data-bind="value: vacnozzle.x">
                                <span class="add-on">mm</span>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="vacnozzle.y">{{ _('Y') }}</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="vacnozzle.y" type="number" step="0.01" class="input-mini text-right" data-bind="value: vacnozzle.y">
                                <span class="add-on">mm</span>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="vacnozzle.extruder_nr">{{ _('Extruder Number') }}</label>
                        <div class="controls">
                            <input id="vacnozzle.extruder_nr" type="number" step="1" class="input-mini text-right" data-bind="value: vacnozzle.extruder_nr">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>